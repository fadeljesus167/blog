<%= form_with(model: @user, url: register_path) do |form| %>
    <div>
        <%= form.label :username %>
        <%= form.text_field :username %>
    </div>

    <div>
        <%= form.label :password %>
        <%= form.password_field :password %>
    </div>

    <%= form.submit t('.register_user') %>
<% end %>